{
  "name": "competitive-companion-v2",
  "displayName": "Competitive Companion: Stress Tester",
  "description": "In‑editor CP judge results panel with LeetCode stress‑testing",
  "version": "0.1.0",
  "engines": { "vscode": "^1.64.0" },
  "categories": ["Other"],
  "activationEvents": [
    "onCommand:competitive-companion-v2.showStressTester",
    "onCommand:competitive-companion-v2.fetchProblem"
  ],
  "main": "./src/frontend/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "competitive-companion-v2.showStressTester",
        "title": "Competitive Companion: Stress Tester"
      },
      {
        "command": "competitive-companion-v2.fetchProblem",
        "title": "Fetch LeetCode Problem"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Competitive Companion Settings",
      "properties": {
        "competitiveCompanion.testCount": {
          "type": "number",
          "default": 100,
          "description": "Number of random tests to generate"
        },
        "competitiveCompanion.timeLimitMs": {
          "type": "number",
          "default": 1000,
          "description": "Per-test time limit in milliseconds"
        }
      }
    }
  },
  "scripts": {
    "build": "echo 'No build step; using raw JS'",
    "test": "echo 'No tests defined'"
  },
  "dependencies": {
    "node-fetch": "^2.7.0",
    "cheerio": "^1.1.0"
  },
  "devDependencies": {
    "@types/node": "^16.11.7",
    "@types/vscode": "^1.64.0",
    "@vscode/test-electron": "^2.0.0",
    "eslint": "^8.0.0"
  }
}